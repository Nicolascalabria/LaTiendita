@model IEnumerable<LaTiendita.Models.Producto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

 
@foreach (var item in Model) {



    <div class="card" style="width: 18rem;">
